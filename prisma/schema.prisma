generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define your database models below

// SAMPLE MODELS
// FAQs, BANNERS, BLOG POSTS, TERMS OF SERVICE


model BlogPost{
  id String @id() @default(uuid())
  title String @unique()
  slug String @unique() // generated from the title. We do not want to have duplicated blog contents
  content String
  createdBy String
  lastModifiedBy String?
  createdAt DateTime @default(now())
  lastUpdatedAt DateTime @updatedAt()
  headerImage String?
  metaTitle String?
  metaDescription String?
  metaTags String? //comma separated string
  isActive Boolean @default(false)
  isDeleted Boolean @default(false)
  deletedAt DateTime?
}

model Banner{
  id String @id() @default(uuid())
  imageUrl String
  webLink String // link to be used by web apps
  appLink String? // link to be used by mobile apps
  query Json? // query params for the link
  createdBy String
  lastModifiedBy String?
  createdAt DateTime @default(now())
  lastUpdatedAt DateTime @updatedAt()
  isActive Boolean @default(false)
  isDeleted Boolean @default(false)
  deletedAt DateTime?
}

model Faq{
  id String @id() @default(uuid())
  question String
  answer String
  createdBy String
  lastModifiedBy String?
  createdAt DateTime @default(now())
  lastUpdatedAt DateTime @updatedAt()
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)
  deletedAt DateTime?
}

model PrivacyPolicy{
  id String @id() @default(uuid())
  title String @unique()
  slug String @unique()
  content String
  metaTitle String?
  metaDescription String?
  metaTags String? // comma separated string
  createdBy String
  lastModifiedBy String?
  createdAt DateTime @default(now())
  lastUpdatedAt DateTime @updatedAt()
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)
  deletedAt DateTime?
}

model TermsOfService{
  id String @id() @default(uuid())
  title String @unique()
  slug String @unique()
  content String
  metaTitle String?
  metaDescription String?
  metaTags String? // comma separated string
  createdBy String
  lastModifiedBy String?
  createdAt DateTime @default(now())
  lastUpdatedAt DateTime @updatedAt()
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)
  deletedAt DateTime?
}